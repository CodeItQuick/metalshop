{
	"name": "authoritarian-client",
	"version": "0.0.0-dev.8",
	"description": "browser ui library for login and user settings",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"license": "ISC",
	"main": "dist",
	"files": [
		"dist",
		"source/**/*.pug",
		"source/**/*.scss"
	],
	"keywords": [],
	"scripts": {
		"prepare": "run-s clean build test",
		"clean": "rimraf dist && mkdirp dist",
		"build": "run-s clean build-barrels && run-p build-pages build-scripts build-styles && echo ✔ done production build",
		"build:debug": "run-s clean build-barrels && run-p build-pages:debug build-scripts:debug build-styles:debug && echo ✔ done debug build",
		"build:debug+test": "run-s build:debug test",
		"build-barrels": "barrelsby --delete --exclude '(.*)\\.bundle\\.(.+)$' -d source",
		"build-pages": "pug --no-debug source -o dist",
		"build-pages:debug": "pug --pretty source -o dist",
		"build-scripts": "run-p build-typescript-lib build-bundle",
		"build-scripts:debug": "run-p build-typescript-lib:debug build-bundle:debug",
		"build-typescript-lib": "tsc",
		"build-typescript-lib:debug": "tsc --target es6",
		"build-bundle": "browserify source/demo.bundle.ts -p [ tsify ] -g [ envify --NODE_ENV production ] -p uglifyify > dist/demo.bundle.big.js && uglifyjs -cm < dist/demo.bundle.big.js > dist/demo.bundle.js",
		"build-bundle:debug": "browserify source/demo.bundle.ts --debug -p [ tsify ] > dist/demo.bundle.js",
		"build-styles": "sassbass --indir source --outdir dist",
		"build-styles:debug": "sassbass --indir source --outdir dist --sourcemap",
		"watch": "run-p watch-pages watch-styles",
		"watch-pages": "pug --watch --pretty source -o dist",
		"watch-styles": "sassbass --indir source --outdir dist --sourcemap --watch",
		"test": "jest --verbose --rootDir dist",
		"deploy": "./deploy.sh gh-pages",
		"start": "http-server ./dist"
	},
	"devDependencies": {
		"@types/jest": "24.0.11",
		"barrelsby": "2.0.0",
		"browserify": "16.2.3",
		"envify": "4.1.0",
		"es6-promise": "4.2.6",
		"http-server": "0.11.1",
		"jest": "24.7.1",
		"mkdirp": "0.5.1",
		"npm-run-all": "4.1.5",
		"octicons": "8.5.0",
		"pug-cli": "1.0.0-alpha6",
		"rimraf": "2.6.3",
		"tsify": "4.0.1",
		"typescript": "3.4.5",
		"uglify-es": "3.3.9",
		"uglifyify": "5.0.1"
	},
	"dependencies": {
		"authoritarian": "0.0.0-dev.9",
		"commotion": "0.0.0-dev.5",
		"crosscall": "0.0.6-dev.1",
		"menutown": "0.0.0-dev.16",
		"mobx": "5.9.4",
		"mobx-preact": "3.0.0",
		"preact": "8.4.2",
		"sassbass": "0.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/authoritarian-client.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/authoritarian-client/issues"
	},
	"homepage": "https://github.com/chase-moskal/authoritarian-client#readme"
}
